<div class="col col-sm-4">
  <% if current_user.current_role_is_admin_or_employee? %>
    <%= f.association :classroom, as: :select2_classroom, user: current_user %>
  <% else %>
    <%= f.association :classroom, as: :select2, elements: @classrooms,
      user: current_user, record: f.object, readonly: ['show', 'edit'].include?(action_name) %>
  <% end %>
</div>
