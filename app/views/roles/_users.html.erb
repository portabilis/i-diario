<fieldset>
  <table class="table table-striped table-bordered table-condensed records">
    <thead>
      <tr>
        <th><%= UserRole.human_attribute_name :user %></th>
        <th><%= UserRole.human_attribute_name :unity %></th>
        <th></th>
      </tr>
    </thead>

    <% sequence = @sequence || -1 %>
    <%= hidden_field_tag :active_users_tab, @active_users_tab %>
    <tbody id="user-roles">
      <%= f.association :user_roles, collection: @user_roles do |p| %>
        <% sequence += 1 %>
        <%= render 'user_role_fields', sequence: sequence, f: p %>
      <% end %>
    </tbody>
    <tfoot class="links">
      <tr>
        <td colspan="3">
          <div class="pull-right">
            <%= paginate @user_roles,
                param_name: :users_page,
                params: { sequence: sequence, active_users_tab: true, active_permissions_tab: false } %>
          </div>
          <div id="page_entries_info" class="pull-right hidden-xs" style="margin-right: 25px;margin-top: 30px;">
            <%= page_entries_info @user_roles %>
          </div>

          <%= link_to_add_association 'Adicionar permissÃ£o', f, :user_roles,
            class: 'btn btn-success btn-sm',
            style: 'margin-top: 15px;',
            :"data-association-insertion-method" => "append",
            :"data-association-insertion-node" => "#user-roles" %>
        </td>
      </tr>
    </tfoot>
  </table>
</fieldset>
